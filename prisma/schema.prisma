generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model app_user {
  id   Int           @id @default(autoincrement())
  name String        @db.VarChar(100)
  role app_user_role
}

enum app_user_role {
  INSTRUCTOR
  STUDENT
}
